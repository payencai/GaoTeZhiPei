<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/part_title_bar_simple_rv"
    style="@style/CommonTitleBar"
    android:layout_alignParentTop="true">

    <ImageButton
        android:id="@+id/titlebar_btn_left"
        style="@style/CommonTitleBarElement"
        android:layout_width="30dp"
        android:layout_marginLeft="5dp"
        android:padding="3sp"
        android:scaleType="centerInside"
        android:src="@drawable/back" />


    <TextView
        android:id="@+id/titlebar_tv_title"
        style="@style/CommonTitleBarText"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:text="高特"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/titlebar_ll_loc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titlebar_tv_right"
            style="@style/CommonTitleBarText"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:text="昆明"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/titlebar_iv_arrowdown"
            android:layout_width="12dp"
            android:layout_height="7dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrowdown" />


    </LinearLayout>
</RelativeLayout>