<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_gray">

    <include layout="@layout/part_titlebar_only_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp"
        android:gravity="center_vertical">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓    名："
        android:textColor="#1a1a1a"
        android:textSize="14sp"/>

        <EditText
            android:id="@+id/add_address_et_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="请输入姓名"
            android:textColor="#1a1a1a"
            android:textSize="14sp"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_gray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textColor="#1a1a1a"
            android:textSize="14sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:id="@+id/add_et_phone"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColor="#1a1a1a"
            android:textSize="14sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="1dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="8"
            android:id="@+id/register_et_verifycode"
            android:background="@null"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:hint="请输入验证码"
            android:textColor="@color/text_black_color"
            android:textColorHint="#c7c7cd"
            android:textSize="14sp" />

        <TextView
            style="@style/form_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_tv_get_verifycode"
            android:text="获取验证码"
            android:gravity="center_vertical|right"
            android:layout_marginRight="0dp"
            android:padding="12dp"
            android:background="@color/text_blue_color"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/divider_gray"></View>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:id="@+id/add_address_et_detail_address"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="start"
        android:textSize="14sp"
        android:hint="选填：给学校留言（45字以内）"
        android:background="@color/white"
        android:maxLines="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider_gray"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnApplyForEnroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_btn_lcl_driver"
            android:text="报名"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>