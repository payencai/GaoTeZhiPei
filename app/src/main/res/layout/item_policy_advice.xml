<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    


    <ImageView
        android:id="@+id/item_pa_iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pa_image1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:adjustViewBounds="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="13dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/item_pa_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/text_black_color"
        android:layout_alignParentLeft="true"
        android:text="一周企服门面临解散"
        android:lines="3"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/item_pa_iv_img"
        android:layout_alignTop="@id/item_pa_iv_img"/>

    <TextView
        android:id="@+id/item_pa_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2小时前"
        android:textSize="10sp"
        android:textColor="#ff0006"
        android:layout_alignBottom="@id/item_pa_iv_img"
        android:layout_toLeftOf="@id/item_pa_iv_img"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/item_pa_tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="环球时报"
        android:textSize="10sp"
        android:textColor="#666666"
        android:layout_toLeftOf="@id/item_pa_tv_time"
        android:layout_marginRight="20dp"
        android:singleLine="true"
        android:layout_alignLeft="@id/item_pa_tv_title"
        android:layout_alignBottom="@id/item_pa_iv_img"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"
        android:layout_marginTop="13dp"
        android:layout_below="@id/item_pa_tv_author"></View>

</RelativeLayout>