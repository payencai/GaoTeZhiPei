<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        layout="@layout/part_titlebar_only_back"></include>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_item_order"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:id="@+id/item_tv_order_time"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="2018-01-03   11:16:00"
                android:textColor="#999999"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_rl_status"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/order_green"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_tv_status"
                    android:layout_centerInParent="true"
                    android:text="待接单"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_tv_mail_district"
                    android:text="龙华新区"
                    android:textColor="@color/text_black_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_tv_mail_province_city"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="广东 深圳"
                    android:textColor="#e2363a"
                    android:textSize="10sp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/item_tv_distance"
                android:background="@drawable/order_redstroke"
                android:padding="3dp"
                android:gravity="center"
                android:text="1200km"
                android:textColor="#e2363a"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_tv_pick_district"
                    android:text="龙华新区"
                    android:textColor="@color/text_black_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_tv_pick_province_city"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="广东 深圳"
                    android:textColor="#e2363a"
                    android:textSize="10sp" />


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:src="#e3e3e3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:id="@+id/item_tv_cargo_name"
                android:text="家电电器:"
                android:textColor="@color/text_black_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_tv_cargo_inform"
                android:layout_marginLeft="3dp"
                android:text="22件  22kg  22m³"
                android:textColor="@color/text_black_color"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:src="#e3e3e3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="取货时间:"
                android:textColor="@color/text_black_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_tv_get_cargo_time"
                android:layout_marginLeft="3dp"
                android:text="2018-01-03  11:24:00"
                android:textColor="@color/text_black_color"
                android:textSize="12sp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll"
                android:layout_alignParentLeft="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center_vertical"
                    android:src="#e3e3e3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="取货地址:"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_black_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_tv_get_cargo_addr"
                android:layout_marginLeft="3dp"
                android:layout_alignParentRight="true"
                android:text="云南省弥勒市红河区aa前卫西路世纪半岛橄榄谷7-6号"
                android:maxLines="2"
                android:layout_toRightOf="@id/ll"
                android:layout_alignParentTop="@id/ll"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/text_black_color"
                android:textSize="12sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f6f6f6"
                android:layout_marginTop="10dp"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/item_rl_bottom"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:gravity="right">


                <Button
                    android:layout_width="67dp"
                    android:layout_height="28dp"
                    android:id="@+id/item_btn_right"
                    android:textSize="12sp"
                    android:textColor="#ea363a"
                    android:gravity="center"
                    android:background="@drawable/order_redstroke"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:text="联系司机"
                    />

                <Button
                    android:layout_width="67dp"
                    android:layout_height="28dp"
                    android:id="@+id/item_btn_left"
                    android:layout_toLeftOf="@id/item_btn_right"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:background="@drawable/order_greystroke"
                    android:layout_marginRight="12dp"
                    android:text="取消订单"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <com.baoyachi.stepview.VerticalStepView
        android:layout_width="match_parent"
        android:id="@+id/lcl_order_detail_vsv"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

    </com.baoyachi.stepview.VerticalStepView>


</LinearLayout>