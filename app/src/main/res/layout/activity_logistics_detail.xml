<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/part_titlebar_only_back"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_item_order"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/item_tv_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:text="2018-01-03   11:16:00"
                        android:textColor="#999999"
                        android:textSize="10sp" />

                    <RelativeLayout
                        android:id="@+id/item_rl_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/order_green"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/item_tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="待接单"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_tv_mail_district"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="龙华新区"
                            android:textColor="@color/text_black_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/item_tv_mail_province_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="广东 深圳"
                            android:textColor="#e2363a"
                            android:textSize="10sp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/order_redstroke"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="1200km"
                        android:textColor="#e2363a"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_tv_pick_district"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="龙华新区"
                            android:textColor="@color/text_black_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/item_tv_pick_province_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="广东 深圳"
                            android:textColor="#e2363a"
                            android:textSize="10sp" />


                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:src="#e3e3e3" />

                    <TextView
                        android:id="@+id/item_tv_cargo_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="家电电器:"
                        android:textColor="@color/text_black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/item_tv_cargo_inform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="22件  22kg  22m³"
                        android:textColor="@color/text_black_color"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:src="#e3e3e3" />

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="12dp"-->
                        <!--android:text="物流公司:"-->
                        <!--android:textColor="@color/text_black_color"-->
                        <!--android:textSize="12sp" />-->

                    <TextView
                        android:id="@+id/item_tv_express_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="物流公司:2018-01-03  11:24:00"
                        android:textColor="@color/text_black_color"
                        android:textSize="12sp" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_vertical"
                            android:src="#e3e3e3" />

                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center_vertical"-->
                            <!--android:layout_marginLeft="12dp"-->
                            <!--android:text="物流单号:"-->
                            <!--android:textColor="@color/text_black_color"-->
                            <!--android:textSize="12sp" />-->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_tv_express_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="@id/ll"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@id/ll"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="2"
                        android:text="物流单号:1234212156"
                        android:textColor="@color/text_black_color"
                        android:textSize="12sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#f6f6f6"></View>

                    <RelativeLayout
                        android:id="@+id/item_rl_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:visibility="gone">


                        <Button
                            android:id="@+id/item_btn_right"
                            android:layout_width="67dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/order_redstroke"
                            android:gravity="center"
                            android:text="联系司机"
                            android:textColor="#ea363a"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/item_btn_left"
                            android:layout_width="67dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="12dp"
                            android:layout_toLeftOf="@id/item_btn_right"
                            android:background="@drawable/order_greystroke"
                            android:gravity="center"
                            android:text="取消订单"
                            android:textColor="#333333"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

            <com.xyz.step.FlowViewVertical
                android:id="@+id/lcl_order_detail_vsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                app:v_bgPositionX="30dp"
                app:v_bg_color="#029dd5"
                app:v_bg_radius="4dp"
                app:v_bg_width="2dp"
                app:v_interval="60dp"
                app:v_pro_color="#cdcbcc"
                app:v_pro_radius="4dp"
                app:v_pro_width="2dp"
                app:v_textMoveTop="7dp"
                app:v_textPaddingLeft="20dp"
                app:v_textsize="14dp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>