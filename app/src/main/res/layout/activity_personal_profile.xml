<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/divider_gray">

    <include
        layout="@layout/part_titlebar_only_back"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/form_item_title_font"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_15sp"
            android:text="头像" />
        <FrameLayout
            android:id="@+id/imgEnter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/length_view_25dp"
            android:layout_height="@dimen/title_bar">
            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_gravity="right|center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/arrowright"/>
        </FrameLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPerson"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/train_image1"
            android:layout_toLeftOf="@id/imgEnter"
            android:layout_marginLeft="@dimen/margin_20dp"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_view_50dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:background="@color/white">
        <TextView
            style="@style/form_item_title_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_15sp"
            android:text="昵称" />
        <TextView
            android:id="@+id/tvNickName"
            style="@style/form_item_title_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_25dp"
            android:layout_gravity="right|center_vertical"
            android:textSize="@dimen/text_size_15sp"
            android:text="给个槌子" />
        <FrameLayout
            android:id="@+id/imgNickNameEnter"
            android:layout_gravity="right|center_vertical"
            android:layout_width="@dimen/length_view_25dp"
            android:layout_height="@dimen/title_bar">
            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_gravity="right|center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/arrowright" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_view_50dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:background="@color/white">
        <TextView
            style="@style/form_item_title_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_15sp"
            android:text="手机号" />
        <TextView
            android:id="@+id/tvPhone"
            style="@style/form_item_title_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_gravity="right|center_vertical"
            android:textSize="@dimen/text_size_15sp"
            android:text="13800000000" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_view_50dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:background="@color/white">
        <TextView
            style="@style/form_item_title_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_15sp"
            android:text="性别" />
        <TextView
            android:id="@+id/tvGender"
            style="@style/form_item_title_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_25dp"
            android:layout_gravity="right|center_vertical"
            android:textSize="@dimen/text_size_15sp"
            android:text="男" />
        <FrameLayout
            android:id="@+id/imgGenderEnter"
            android:layout_gravity="right|center_vertical"
            android:layout_width="@dimen/length_view_25dp"
            android:layout_height="@dimen/title_bar">
            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_gravity="right|center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/arrowright" />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>