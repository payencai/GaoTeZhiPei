<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="68dp"
        android:layout_height="77dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/mine_no_permission"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#00c1de"
        android:textSize="17sp"
        android:layout_marginTop="18dp"
        android:text="您还没有该权限哦"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#999999"
        android:textSize="12sp"
        android:text="请联系客户或完成司机认证"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#999999"
        android:textSize="12sp"
        android:text="为您授权" />

    <Button
        android:layout_width="132dp"
        android:layout_height="26dp"
        android:id="@+id/no_permission_btn_know"
        android:text="知道了"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="18dp"
        android:textSize="10sp"
        android:textColor="#00c1de"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mine_no_permission_greenstroke"/>

</LinearLayout>