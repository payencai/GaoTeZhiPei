<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:paddingLeft="35dp"
    android:paddingRight="35dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/step2_rl_choose_car_plate_color"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌颜色:"
            android:id="@+id/tag_tv1"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="#333333"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:id="@+id/tag_iv1"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/mine_arrowright"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/tag_iv1"
            android:layout_toRightOf="@id/tag_tv1"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:text="请选择车牌颜色"/>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/divider_gray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号码:"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColorHint="#999999"
            android:textColor="#333333"
            android:hint="请输入您的车牌号码"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/divider_gray"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/step2_rl_choose_car_type"
        android:gravity="center_vertical"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆类型:"
            android:id="@+id/tag_tv2"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="#333333"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:id="@+id/tag_iv2"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/mine_arrowright"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/tag_iv2"
            android:layout_toRightOf="@id/tag_tv2"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:text="请选择车辆类型"/>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/divider_gray"></View>

</LinearLayout>