                android:layout_height="wrap_content"
                android:id="@+id/item_tv_pick_province_city"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="广东 深圳"
                android:textColor="#e2363a"
                android:textSize="10sp" />


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
