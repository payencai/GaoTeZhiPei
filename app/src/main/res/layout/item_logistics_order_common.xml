                android:id="@+id/item_tv_mail_district"
                android:text="龙华新区"
                android:textColor="@color/text_black_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_tv_mail_province_city"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="广东 深圳"
                android:textColor="#e2363a"
                android:textSize="10sp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/item_tv_distance"
            android:background="@drawable/order_redstroke"
            android:gravity="center"
            android:padding="3dp"
            android:text="1200km"
            android:textColor="#e2363a"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_tv_pick_district"
                android:text="龙华新区"
                android:textColor="@color/text_black_color"
                android:textSize="14sp" />

            <TextView
