                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:text="公司名称:    "
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>


                <EditText
