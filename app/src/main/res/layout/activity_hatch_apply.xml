                    android:id="@+id/apply_et_company"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/shape_et_gaote_cooperate"
                    android:padding="10dp"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
