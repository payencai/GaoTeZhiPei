                        android:layout_marginLeft="3dp"
                        android:text="项目现状:"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>

                <com.sevenheaven.segmentcontrol.SegmentControl xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/apply_sc_schedule"
                    android:layout_marginLeft="80dp"
                    android:textSize="12sp"
                    app:cornerRadius="5dp"
                    app:horizonGap="10dp"
                    app:normalColor="@color/white"
                    app:selectedColor="@color/step_completed_color"
                    app:separatorWidth="1dp"
                    app:textColors="@drawable/selector_rg_car_type"
                    app:texts="创意阶段|创意计划|已经启动|已经运营"
